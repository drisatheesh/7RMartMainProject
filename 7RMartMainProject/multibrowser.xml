<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="MultiBrowserSuite" parallel="tests" thread-count="3">
<listeners><listener class-name="generatereport.Listeners"></listener></listeners>


    <!-- Chrome Tests -->
    <test name="ChromeTest">
        <parameter name="browser" value="chrome" />
        <classes>
            <class name="testscript.HomePageTest"/>
            <class name="testscript.ManageContactTest"/>
        </classes>
    </test>

    <!-- Firefox Tests -->
    <test name="FirefoxTest">
        <parameter name="browser" value="firefox" />
        <classes>
            <class name="testscript.HomePageTest"/>
            <class name="testscript.ManageContactTest"/>
        </classes>
    </test>

    <!-- Edge Tests -->
    <test name="EdgeTest">
        <parameter name="browser" value="edge" />
        <classes>
            <class name="testscript.HomePageTest"/>
            <class name="testscript.ManageContactTest"/>
        </classes>
    </test>

</suite>